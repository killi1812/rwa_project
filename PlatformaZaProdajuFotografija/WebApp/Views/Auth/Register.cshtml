@model RegisterVM
@{
    ViewData["Title"] = "Register";
}
<form >
    <div class="mb-3">
        <label asp-for="Username" class="form-label">Username</label>
        <input type="text" class="form-control" asp-for="Username">
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="form-label">Password</label>
        <input asp-for="Password" type="password" class="form-control">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password2" class="form-label">Password</label>
        <input asp-for="Password2" type="password" class="form-control">
        <span asp-validation-for="Password2" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary" asp-controller="Auth" asp-action="RegisterAction">Submit</button>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}