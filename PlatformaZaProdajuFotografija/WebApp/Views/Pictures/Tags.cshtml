@model List<TagVM>

@{
    ViewBag.Title = "Tags";
}

<h2>Tags</h2>
<table class="table">
    <tr>
        <th>Tag</th>
        <th>Number of Pictures</th>
        <th></th>
    </tr>
    @foreach (var tag in Model.OrderBy(t => t.PicturesCount))
    {
        <tr id=@tag.Guid>
            <td>@tag.Name</td>
            <td>
                <a href=@Url.ActionLink("Search", "Pictures", new { query = $"Tag={tag.Name}" })>@tag.PicturesCount</a>
            </td>
            <td>
                <a class="btn btn-danger" href=@Url.ActionLink("DeleteTag", "Pictures", new { guid = tag.Guid })>Delete</a>
            </td>
        </tr>
    }
</table>