@model List<TagVM>

@{
    ViewBag.Title = "Tags";
}

<h2>Tags</h2>
<h2>Users</h2>
<table class="table">
    <tr>
        <th>Tag</th>
        <th>Number of Pictures</th>
        <th></th>
    </tr>
    @foreach (var tag in Model.OrderBy(t => t.PicturesCount))
    {
        <tr>
            <td>@tag.Name</td>
            <td>@tag.PicturesCount</td>
            <td>
                <a class="btn btn-danger" href=@Url.ActionLink("DeleteTag", "Pictures", new { guid = tag.Guid })>Delete</a>
            </td>
        </tr>
    }
</table>